<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="988.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gdse.Controllers.UserController">

    <!-- Header Label -->
    <Label layoutX="371.0" layoutY="17.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="User Management">
      <font>
         <Font name="System Bold Italic" size="14.0" />
      </font></Label>

    <!-- Back Button -->
    <Button fx:id="btnBack" layoutX="915.0" layoutY="450.0" onAction="#btnBackOnAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Back" />

    <!-- Labels and Input Fields -->
    <Label layoutX="21.0" layoutY="95.0" text="User ID:" />

    <Label layoutX="286.0" layoutY="95.0" text="Name:" />
    <TextField fx:id="txtName" layoutX="337.0" layoutY="91.0" prefWidth="150.0" />

    <Label layoutX="539.0" layoutY="95.0" text="Address:" />
    <TextField fx:id="txtAddress" layoutX="604.0" layoutY="93.0" prefWidth="150.0" />

    <Label layoutX="20.0" layoutY="131.0" text="Phone:" />
    <TextField fx:id="txtPhone" layoutX="71.0" layoutY="127.0" prefWidth="150.0" />

    <Label layoutX="286.0" layoutY="131.0" text="Email:" />
    <TextField fx:id="txtEmail" layoutX="330.0" layoutY="127.0" prefWidth="150.0" />

    <Label layoutX="539.0" layoutY="131.0" text="Position:" />
    <ComboBox fx:id="cmbPosition" layoutX="604.0" layoutY="127.0" onAction="#cmbPositionOnAction" prefWidth="150.0">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Admin" />
                <String fx:value="Admissions Coordinator" />
            </FXCollections>
        </items>
    </ComboBox>

    <Label layoutX="20.0" layoutY="166.0" text="Password:" />
    <TextField fx:id="txtPassword" layoutX="91.0" layoutY="162.0" prefWidth="150.0" />

    <!-- Action Buttons -->
    <Button fx:id="btnAdd" layoutX="20.0" layoutY="450.0" onAction="#btnAddOnAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Add" />
    <Button fx:id="btnUpdate" layoutX="80.0" layoutY="450.0" onAction="#btnUpdateOnAction" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Update" />
    <Button fx:id="btnDelete" layoutX="160.0" layoutY="450.0" onAction="#btnDeleteOnAction" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Delete" />
    <Button fx:id="btnClear" layoutX="240.0" layoutY="450.0" onAction="#btnClearOnAction" style="-fx-background-color: #607D8B; -fx-text-fill: white;" text="Clear" />

    <!-- Table View for Displaying User Details (excluding Password) -->
    <TableView fx:id="tblUsers" layoutX="36.0" layoutY="201.0" prefHeight="225.0" prefWidth="918.0">
        <columns>
            <TableColumn fx:id="colUserID" prefWidth="75.0" text="User ID" />
            <TableColumn fx:id="colName" prefWidth="95.0" text="Name" />
            <TableColumn fx:id="colNIC" prefWidth="99.0" text="NIC" />
            <TableColumn fx:id="colAddress" prefWidth="150.0" text="Address" />
            <TableColumn fx:id="colPhone" prefWidth="159.0" text="Phone" />
            <TableColumn fx:id="colEmail" prefWidth="140.0" text="Email" />
            <TableColumn fx:id="colPosition" prefWidth="138.0" text="Position" />
        </columns>
    </TableView>
   <TextField fx:id="txtId" layoutX="80.0" layoutY="93.0" prefWidth="150.0" />
</AnchorPane>
